{# The main page of the application #}

{% extends "_common.njk" %}

{% block content %}
<body>
<!-- Carousel for the landscape picture-->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="./images/lake.jpg" alt="First slide" height="500">
      <div class="carousel-caption d-none d-md-block">
        <h3>Ice cream</h3>
        <h4>Because who doesn't like that</h4>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="./images/mountain.jpg" alt="Second slide" height="500">
      <div class="carousel-caption d-none d-md-block" id="clown-caption">
        <h3>The clowns</h3>
        <h4>Those dense scary motherfucker</h4>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="./images/wood-bridge.jpg" alt="Third slide" height="500">
      <div class="carousel-caption d-none d-md-block" id="bridge-caption">
        <h3>Kebab</h3>
        <h4>After a party, it's heaven in a plate</h4>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<!-- Carousel for the customer's testimony-->

<div id="carouselForCustomer" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div id="quote">
        <blockquote class="blockquote text-right">
        <p class="mb-0">He is such talented, it's a real pleasure to work together.
        I know with him in my team, it won't take long to take over the world</p>
        <footer class="blockquote-footer">The BoGoss <cite title="Source Title">en train de faire du sale</cite></footer>
        <img src="./images/jamal.png" width="124" height="150" id="img-quote" class="rounded-circle">
        </blockquote>
      </div>
    </div>

    <div class="carousel-item">
      <div id="quote">
        <blockquote class="blockquote text-right">
        <p class="mb-0">Woaw, just woaw</p>
        <footer class="blockquote-footer">Mr Woaw<cite title="Source Title">From Woaw Inc.</cite></footer>
        <img src="./images/alexandre.jpeg" width="124" height="150" id="img-quote" class="rounded-circle">
        </blockquote>
      </div>
    </div>

    <div class="carousel-item">
      <div id="quote"">
        <blockquote class="blockquote text-right">
        <p class="mb-0">If you want to take over the word. Hire this A-Team you will get the job done,
        100% of the time</p>
        <footer class="blockquote-footer">El Caballero loco<cite title="Source Title">From Voyou Corp.</cite></footer>
        <img src="./images/mathieu.jpg" width="124" height="150" id="img-quote" class="rounded-circle">
        </blockquote>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselForCustomer" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselForCustomer" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div id="bar-progress">
<h1><b>Some progress we are proud to share</b></h1>
  <h2>Employee capacity</h2>
  <div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 60%"></div>
  </div>
  <h2>Projects finished</h2>
  <div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%; background-color: red;"></div>
  </div>
  <h2>Customer's satisfaction</h2>
  <div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 95%; background-color: green;"></div>
  </div>
  <h2>Humanitarian projects completed</h2>
  <div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 80%; background-color: blue;"></div>
  </div>
</div>


</body>

<footer id="foot">
  <div id="footer-box">
    <div class="text">
      <p>Copyright Â© Made By Louis | From Becode</p>
    </div>
  </div>
</footer>
{% endblock %}
